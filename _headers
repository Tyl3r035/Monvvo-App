/images/*
  Cache-Control: public, max-age=2592000  # 30 days for images

/css/*
  Cache-Control: public, max-age=604800    # 7 days for CSS

/js/*
  Cache-Control: public, max-age=604800    # 7 days for JavaScript

/fonts/*
  Cache-Control: public, max-age=31536000  # 1 year for fonts

# Specific caching for JSDelivr resources
/npm/chart.js
  Cache-Control: public, max-age=604800    # 7 days for Chart.js

/npm/chartjs-plugin-datalabels
  Cache-Control: public, max-age=604800    # 7 days for Chart.js plugin datalabels

# Caching Google Fonts CSS and font files
https://fonts.googleapis.com/*
  Cache-Control: public, max-age=604800    # 7 days for Google Fonts CSS

https://fonts.gstatic.com/*
  Cache-Control: public, max-age=31536000  # 1 year for Google Fonts files
